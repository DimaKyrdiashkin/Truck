.mobalMenu
  display none

@media all and (max-width 560px)
  .mobalMenu
    display block
    position fixed
    transition .2s
    background #fff
    width 100%
    height 100vh
    z-index 999
    top 0
    left 560px

    & .soc
      display flex
      position absolute
      bottom 50px
      left 50%
      transform translateX(-50%)
      
      &>a
        &:first-child
          margin-right 55px

    & .cross
      margin 40px auto 0
      display flex
      cursor pointer

    & .abstraction
      width 100%
      position absolute
      bottom 10%

    & .menu
      display flex
      justify-content center
      flex-direction column
      margin-top 40%
      &>li
        margin-bottom 45px
        display flex
        justify-content center

        &:last-child
          margin-bottom 0

        &>a
          color #1D1D1D
          font-size 20px