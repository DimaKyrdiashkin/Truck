.aboutBook
  background #8973DB
  display flex
  flex-direction column
  align-items center
  position relative

  & .abstraction
    position absolute

    &:nth-child(1)
      right 0
      top 80px
      width 57%

    &:nth-child(2)
      left 0
      top 40%
      width 19%

    &:nth-child(3)
      right 0
      top 55%
      width 14%

    &:nth-child(4)
      left 0
      bottom 0
      width 30%

  & .container
    & h2
      color #fff

  & .bigContainer
    max-width 1500px
    background #fff
    padding 0 130px
    margin-top 50px

    &:last-child
      width 100%
      display flex
      justify-content center

      & iframe
        width calc(600vw / 9)
        height calc(600vw / 16)

    &_item
      display flex
      justify-content space-between

      &:first-child
        & ul
        & h4
          padding-top 70px

      &>h4
        color #8973DB
        font-weight 500
        width 30%
        margin-right 50px

      & ul
        width 70%
        display flex
        flex-direction column
        border-left 1px solid #B3A5E9
        padding 0 0 75px 50px

        &>li
          margin-bottom 45px
          margin-left 20px
          position relative

          &:last-child
            margin-bottom 0

          &::before
            content ''
            display block
            width 10px
            height 1px
            background #222
            position absolute
            left -10px
            top 11px
            transform translateX(-100%)

@media all and (max-width 1600px)
  .aboutBook
    & .bigContainer
      padding 0 45px

      &:last-child
        max-width calc(100vw - 90px)

@media all and (max-width 1440px)
  .aboutBook
    & .bigContainer
      &:last-child
        max-width fit-content

@media all and (max-width 1024px)
  .aboutBook
    & .abstraction
      &:nth-child(2)
      &:nth-child(3)
        display none

@media all and (max-width 768px)
  .aboutBook
    & .bigContainer_item
      & ul
        padding 0 0 30px 25px
        
        &>li
          margin-bottom 20px

          &:last-child
            margin-bottom 0

      &>h4
        margin-right 25px
        width 40%

@media all and (max-width 560px)
  .aboutBook
    & .abstraction:nth-child(1)
      width 100%
      top 15px

    & .bigContainer
      padding 0 14px 24px
      // padding-bottom 24px
      margin-top 25px

      &:last-child
        padding 0

        & iframe
          width calc(800vw/9)
          height calc(800vw/16)
        
      &_item
        flex-direction column

        & ul
          padding 15px 0
          border none
          width 100%

        &>h4
          width 100%
          max-width 400px
          padding-top 24px

        &:first-child
          &>h4
            padding-top 24px

          & ul
            padding-top 15px

