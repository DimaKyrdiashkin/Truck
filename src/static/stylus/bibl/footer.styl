footer
  width 100%
  background #303030
  padding 30px 0

  & .container
    display flex
    justify-content space-between
    align-items center

    & .img-wrap
      &>img
        height 80px

  & .soc
    display flex

    & li
      display flex
      margin-right 5px

      &:last-child
        margin-right 0

      & img
        display block

  & p
    text-align center
    max-width 300px
    color #FEFEFE

    &>b
      color #FEFEFE

@media all and (max-width 920px)
  footer
    & .container
      flex-wrap wrap

      & .img-wrap
        order 1

        &>img
          margin-left 12px

      &>*
        width 50%

      & .soc
        order 3

      & .subP:nth-child(3)
        order 2
        text-align left

      & .subP:nth-child(4)
        order 4
        text-align left

@media all and (max-width 560px)
  footer
    & .container
      flex-direction column
      text-align center
      
      &>*
        order unset  !important
        width 80%

      & .img-wrap
        margin-bottom 20px

      & .soc
        margin-bottom 16px
        justify-content center

      & .subP
        text-align center !important
        margin-bottom 10px

        &>b
          margin-bottom 5px