.recomendation
  &_box
    display flex
    flex-wrap wrap
    justify-content space-between

    &__item
      max-width 350px
      margin-bottom 20px
      padding 10px 10px 28px
      width 30%

      &>p
        text-align center
        margin-top 35px

      & .img-wrapper
        box-shadow 0px 12px 80px rgba(0, 0, 0, 0.05),
          0px 4px 29px rgba(0, 0, 0, 0.0344991),
          0px 2px 14px rgba(0, 0, 0, 0.0278145),
          0px 1px 7px rgba(0, 0, 0, 0.0221855),
          0px 0.5px 3px rgba(0, 0, 0, 0.0155009)
        
        &>img
          width 100%
          display block
          object-fit contain

@media all and (max-width 1024px)
  .recomendation
    &_box
      justify-content center

      &__item
        width 50%
        padding 10px 40px 28px
        max-width 400px

@media all and (max-width 560px)
  .recomendation
    &_box
      &__item
        width 100%

      & .img-wrapper
        max-width 175px
        margin 0 auto

@media all and (orientation landscape) and (max-width 850px)
  .recomendation
    &_box
      &__item
        padding 10px 20px 28px

        & .img-wrapper
          max-width 150px
          margin 0 auto
        
        & p
          margin-top 16px