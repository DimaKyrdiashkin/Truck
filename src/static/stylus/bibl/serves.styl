.serves
  &_box
    display flex
    flex-wrap wrap
    justify-content space-between

    &__item
      width 30%
      max-width 350px
      display flex
      flex-direction column
      align-items center
      margin-bottom 50px
      padding-top 10px

      & p
        text-align center
        margin-top 30px
        max-width 300px

      & img
        display block

@media all and (max-width 1024px)
  .serves
    &_box
      &__item
        width 50%
        max-width 100%

@media all and (max-width 560px)
  .serves
    &_box
      &__item
        & img
          width 75px

        & p
          padding 0 8px
          margin-top 16px

@media all and (orientation landscape) and (max-width 850px)
  .serves
    &_box
      &__item
        & img
          width 90px

        & p
          margin-top 16px